<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>VOMS-ADMIN 2.0</display-name>
    
    <!-- Struts 2 filter -->
    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
        <init-param>
            <param-name>actionPackages</param-name>
            <param-value>it.cnaf.infn.voms.actions</param-value>
        </init-param>
    </filter>
    
    	
	<filter>
		<filter-name>security-context-filter</filter-name>
		<filter-class>org.glite.security.voms.admin.servlets.SecurityContextFilter</filter-class>
	</filter>
    
	<filter>
		<filter-name>hibernate-session-filter</filter-name>
		<filter-class>org.glite.security.voms.admin.servlets.HibernateSessionFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>axis-hibernate-session-filter</filter-name>
		<filter-class>org.glite.security.voms.admin.servlets.HibernateSessionFilter</filter-class>
	</filter>
	
    <!-- Struts 2 filter mapping -->
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--  -->
    
    
	<filter-mapping>
		<filter-name>security-context-filter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
    
    <filter-mapping>
		<filter-name>hibernate-session-filter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>axis-hibernate-session-filter</filter-name>
		<url-pattern>/services/*</url-pattern>
	</filter-mapping>

    <!--  Struts 2 listeners -->
    
    <!-- Is this spring 
    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoadListener
        </listener-class>
    </listener>
    -->
    
    <listener>
        <listener-class>
            org.apache.struts2.tiles.StrutsTilesListener
        </listener-class>
    </listener>
    

    <!-- End of Struts 2 listeners -->
    
	<listener>
		<display-name>VOMSContextListener</display-name>
		<listener-class>org.glite.security.voms.admin.servlets.VOMSContextListener</listener-class>
	</listener>

	<!-- Standard Action Servlet Configuration (with debugging) -->
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>
			org.apache.struts.action.ActionServlet
		</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/struts-config.xml</param-value>
		</init-param>
		<init-param>
			<param-name>debug</param-name>
			<param-value>2</param-value>
		</init-param>
		<init-param>
			<param-name>detail</param-name>
			<param-value>2</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>axis</servlet-name>
		<servlet-class>
			org.apache.axis.transport.http.AxisServlet
		</servlet-class>
	</servlet>

	<!-- Axis servlet mapping -->
	<servlet-mapping>
		<servlet-name>axis</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>axis</servlet-name>
		<url-pattern>/servlet/axis</url-pattern>
	</servlet-mapping>
	
	<!-- Standard Struts1 Action Servlet Mapping -->
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<!-- The Usual Welcome File List -->
	<welcome-file-list>
		<welcome-file>/pages/index.jsp</welcome-file>
	</welcome-file-list>

    <context-param>
        <param-name>
            org.apache.tiles.impl.BasicTilesContainer.DEFINITIONS_CONFIG
        </param-name>
        <param-value>/WEB-INF/tiles.xml</param-value>
    </context-param>

</web-app>

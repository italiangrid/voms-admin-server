<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>VOMS-ADMIN 2.5</display-name>
    
    <!-- Struts 2 filter -->
    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
        
        <init-param>
            <param-name>actionPackages</param-name>
            <param-value>org.glite.security.voms.admin.view.actions</param-value>
        </init-param>
        
    </filter>
	
    <filter>
      <filter-name>struts-hibernate-session-filter</filter-name>
      <filter-class>org.glite.security.voms.admin.servlets.HibernateSessionFilter</filter-class>
    </filter>
    
	<filter>
		<filter-name>axis-hibernate-session-filter</filter-name>
		<filter-class>org.glite.security.voms.admin.servlets.HibernateSessionFilter</filter-class>
	</filter>
  
    <filter>
        <filter-name>rest-hibernate-session-filter</filter-name>
        <filter-class>org.glite.security.voms.admin.servlets.HibernateSessionFilter</filter-class>
    </filter>
    
    <filter>
        <filter-name>rest-security-context-filter</filter-name>
        <filter-class>org.glite.security.voms.admin.servlets.SecurityContextFilter</filter-class>
    </filter>
	
    <!-- Struts 2 filter mapping -->
    
    <filter-mapping>
        <filter-name>struts-hibernate-session-filter</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>
    
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>
    
	<filter-mapping>
		<filter-name>axis-hibernate-session-filter</filter-name>
		<url-pattern>/services/*</url-pattern>
	</filter-mapping>
     
    <filter-mapping>
        <filter-name>rest-security-context-filter</filter-name>
        <url-pattern>/generate-ac</url-pattern>
    </filter-mapping>
    
    <filter-mapping>
        <filter-name>rest-hibernate-session-filter</filter-name>
        <url-pattern>/generate-ac</url-pattern>
    </filter-mapping>
  
    <!-- Third party plain text restful service -->
    <filter-mapping>
        <filter-name>rest-security-context-filter</filter-name>
        <url-pattern>/get-attributes</url-pattern>
    </filter-mapping>
    
    <filter-mapping>
        <filter-name>rest-hibernate-session-filter</filter-name>
        <url-pattern>/get-attributes</url-pattern>
    </filter-mapping>
    	    
    <listener>
        <display-name>VOMSContextListener</display-name>
        <listener-class>org.glite.security.voms.admin.servlets.VOMSContextListener</listener-class>
    </listener>
     
    <listener>
        <listener-class>
            org.apache.struts2.tiles.StrutsTilesListener
        </listener-class>
    </listener>
      
	<servlet>
		<servlet-name>axis</servlet-name>
		<servlet-class>
			org.apache.axis.transport.http.AxisServlet
		</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>SiblingsServlet</display-name>
		<servlet-name>SiblingsServlet</servlet-name>
		<servlet-class>
		org.glite.security.voms.admin.servlets.SiblingsServlet</servlet-class>
	</servlet>
  
    <!-- VOMS X509 Restful AC servlet -->
    <servlet>
        <servlet-name>voms-ac-servlet</servlet-name>
        <servlet-class>
            it.infn.cnaf.voms.x509.ACServlet
        </servlet-class>
    </servlet>

	<!-- Axis servlet mapping -->
	<servlet-mapping>
		<servlet-name>axis</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>axis</servlet-name>
		<url-pattern>/servlet/axis</url-pattern>
	</servlet-mapping>
	
  <servlet-mapping>
		<servlet-name>SiblingsServlet</servlet-name>
		<url-pattern>/SiblingsServlet</url-pattern>
	</servlet-mapping>
  
    <servlet-mapping>
        <servlet-name>voms-ac-servlet</servlet-name>
        <url-pattern>/generate-ac</url-pattern>
    </servlet-mapping>
    
	<!-- The Usual Welcome File List -->
	<welcome-file-list>
		<welcome-file>/WEB-INF/p/welcome.jsp</welcome-file>
	</welcome-file-list>

	<!-- Tiles definitions configuration -->
    <context-param>
        <param-name>
            org.apache.tiles.impl.BasicTilesContainer.DEFINITIONS_CONFIG
        </param-name>
        <param-value>/WEB-INF/tiles.xml</param-value>
    </context-param>
    
    <context-param>
      <param-name>
        org.apache.tiles.definition.dao.LocaleUrlDefinitionDAO.CHECK_REFRESH
      </param-name>
      <param-value>true</param-value>
    </context-param>
</web-app>
